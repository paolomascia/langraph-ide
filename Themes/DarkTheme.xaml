<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->
    <Color x:Key="BackgroundColor">#1E1E1E</Color>
    <Color x:Key="SurfaceColor">#252526</Color>
    <Color x:Key="SurfaceLightColor">#2D2D30</Color>
    <Color x:Key="BorderColor">#3C3C3C</Color>
    <Color x:Key="PrimaryColor">#0E639C</Color>
    <Color x:Key="PrimaryHoverColor">#1177BB</Color>
    <Color x:Key="AccentColor">#569CD6</Color>
    <Color x:Key="AccentHoverColor">#79B8E8</Color>
    <Color x:Key="AccentMutedColor">#388BCC</Color>
    <Color x:Key="SuccessColor">#4EC9B0</Color>
    <Color x:Key="ErrorColor">#F14C4C</Color>
    <Color x:Key="WarningColor">#CCA700</Color>
    <Color x:Key="TextPrimaryColor">#CCCCCC</Color>
    <Color x:Key="TextSecondaryColor">#808080</Color>
    <Color x:Key="TextTertiaryColor">#6E6E6E</Color>
    <Color x:Key="SelectionColor">#094771</Color>
    <Color x:Key="ControlBackgroundColor">#3C3C3C</Color>
    <Color x:Key="ControlHoverColor">#4C4C4C</Color>
    <Color x:Key="ControlPressedColor">#5C5C5C</Color>
    <Color x:Key="AlternateColor">#2A2D2E</Color>
    <Color x:Key="DropdownColor">#2D2D30</Color>
    <Color x:Key="InfoColor">#58A6FF</Color>
    <Color x:Key="CanvasGridColor">#2D2D30</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLightColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentMutedBrush" Color="{StaticResource AccentMutedColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource SelectionColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
    <SolidColorBrush x:Key="ControlHoverBrush" Color="{StaticResource ControlHoverColor}"/>
    <SolidColorBrush x:Key="ControlPressedBrush" Color="{StaticResource ControlPressedColor}"/>
    <SolidColorBrush x:Key="AlternateBrush" Color="{StaticResource AlternateColor}"/>
    <SolidColorBrush x:Key="DropdownBrush" Color="{StaticResource DropdownColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="CanvasGridBrush" Color="{StaticResource CanvasGridColor}"/>

    <!-- Hardcoded colors for ControlTemplate triggers -->
    <SolidColorBrush x:Key="ControlHoverTriggerBrush" Color="#4C4C4C"/>
    <SolidColorBrush x:Key="ControlPressedTriggerBrush" Color="#5C5C5C"/>
    <SolidColorBrush x:Key="ToolbarHoverTriggerBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="PrimaryHoverTriggerBrush" Color="#1177BB"/>
    <SolidColorBrush x:Key="DangerHoverTriggerBrush" Color="#FF6B6B"/>
    <SolidColorBrush x:Key="SuccessHoverTriggerBrush" Color="#6EDBC4"/>
    <SolidColorBrush x:Key="ScrollThumbBrush" Color="#4C4C4C"/>
    <SolidColorBrush x:Key="ScrollThumbHoverBrush" Color="#6E6E6E"/>

</ResourceDictionary>
