<UserControl x:Class="LangraphIDE.Controls.AgentNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" MinHeight="70"
             MouseLeftButtonDown="OnMouseLeftButtonDown"
             MouseLeftButtonUp="OnMouseLeftButtonUp"
             MouseMove="OnMouseMove">

    <Grid>
        <!-- Main content (normal node) -->
        <Border x:Name="MainBorder"
                Background="{DynamicResource ControlBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with type color -->
                <Border x:Name="HeaderBorder"
                        Grid.Row="0"
                        Background="#58A6FF"
                        CornerRadius="7,7,0,0"
                        Padding="10,6">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="NodeIcon"
                                   Text="&#x2699;"
                                   FontSize="14"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock x:Name="NodeTypeText"
                                   Text="Node Type"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Body -->
                <StackPanel Grid.Row="1" Margin="12,10">
                    <TextBlock x:Name="NodeNameText"
                               Text="Node Name"
                               FontSize="13"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               TextTrimming="CharacterEllipsis"/>
                    <TextBlock x:Name="DescriptionText"
                               Text="Description"
                               FontSize="11"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="Wrap"
                               MaxHeight="32"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Error Indicator -->
                <Border x:Name="ErrorIndicator"
                        Grid.Row="0"
                        Background="#F85149"
                        CornerRadius="10"
                        Width="20" Height="20"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-8,-8,0"
                        Visibility="Collapsed">
                    <TextBlock Text="!"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Start Node (circular) -->
        <Grid x:Name="StartNode" Visibility="Collapsed">
            <Ellipse Width="60" Height="60"
                     Fill="{DynamicResource ControlBackgroundBrush}"
                     Stroke="#3FB950"
                     StrokeThickness="3"/>
            <TextBlock Text="Start"
                       FontSize="12"
                       FontWeight="Bold"
                       Foreground="#3FB950"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- End Node (circular) -->
        <Grid x:Name="EndNode" Visibility="Collapsed">
            <Ellipse Width="60" Height="60"
                     Fill="{DynamicResource ControlBackgroundBrush}"
                     Stroke="#F85149"
                     StrokeThickness="3"/>
            <TextBlock Text="End"
                       FontSize="12"
                       FontWeight="Bold"
                       Foreground="#F85149"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- LLM Node (brain icon with provider name) -->
        <Grid x:Name="LlmNode" Visibility="Collapsed">
            <Border x:Name="LlmBorder"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    BorderBrush="#A371F7"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="8,6">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Brain SVG -->
                    <Path x:Name="BrainPath"
                          Data="M129.49 114.51C129.121 116.961 128.187 119.293 126.762 121.322C125.337 123.351 123.461 125.021 121.28 126.2C120.676 126.535 120.043 126.816 119.39 127.04C120.22 138.04 102.74 142.04 93.32 139.42L96.82 151.66L87.82 151.98L72.07 129.43C66.76 130.93 60.49 131.65 56.44 125.15C56.0721 124.553 55.7382 123.935 55.44 123.3C54.4098 123.51 53.3614 123.617 52.31 123.62C49.31 123.62 44.31 122.72 41.77 120.96C39.7563 119.625 38.1588 117.75 37.16 115.55C31.75 116.29 27.16 115.02 24.16 111.88C20.36 107.97 19.28 101.51 21.26 94.58C23.87 85.33 31.81 74.91 47.59 71C48.9589 69.2982 50.5972 67.8322 52.44 66.66C62.35 60.31 78.44 59.76 90.65 65.79C95.3836 64.9082 100.27 65.376 104.75 67.14C113.53 70.43 119.91 77.31 121.11 84.3C123.487 85.5317 125.433 87.4568 126.69 89.82C129.32 94.76 129.69 99.71 127.92 103.71C129.587 107.049 130.138 110.835 129.49 114.51ZM123.01 109.31C121.612 110.048 120.056 110.434 118.475 110.434C116.894 110.434 115.338 110.048 113.94 109.31L114.67 104.46C117.75 104.76 120.26 103.8 121.57 101.83C123.04 99.64 122.81 96.39 120.95 92.9C118.87 88.99 114.38 88.37 111.89 88.34H111.73C105.49 88.34 99.13 91.89 96.56 96.52L92.82 94.73C93.5553 92.3449 94.8046 90.15 96.48 88.3C95.0376 87.0754 93.9474 85.4887 93.3217 83.703C92.696 81.9173 92.5574 79.9971 92.92 78.14L96.61 77.8C96.7789 79.302 97.4 80.7172 98.3911 81.8583C99.3822 82.9994 100.697 83.8125 102.16 84.19C105.238 82.8161 108.58 82.1335 111.95 82.19C112.43 82.19 112.89 82.24 113.36 82.27C110.969 78.0312 107.18 74.7545 102.64 73C91.56 68.7 84.09 75.37 82.38 77.67C78.26 83.19 80.9 88.41 82.91 91.8L79.61 94.8C76.736 92.314 74.8075 88.9127 74.15 85.17C69.92 86.44 64.24 86.17 61.06 80.74L64.06 78.68C67.43 81.2 72.78 80.98 75.32 77.87C75.9252 76.4949 76.6905 75.1959 77.6 74C79.044 72.093 80.7864 70.4316 82.76 69.08C74.47 66.82 62.76 67.19 55.68 71.73C53.7668 72.841 52.192 74.4517 51.1244 76.3895C50.0569 78.3274 49.5368 80.5192 49.62 82.73C49.62 86.3 52.42 91.94 56.19 92.82L54 97.07C51.5946 96.51