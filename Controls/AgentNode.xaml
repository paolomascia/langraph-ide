                          Fill="#A371F7"
                          Width="48" Height="48"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"/>
                    <!-- Provider name -->
                    <TextBlock x:Name="LlmProviderText"
                               Text="LLM"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="#A371F7"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
            <!-- Error Indicator -->
            <Border x:Name="LlmErrorIndicator"
                    Background="#F85149"
                    CornerRadius="10"
                    Width="20" Height="20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-8,-8,0"
                    Visibility="Collapsed">
                <TextBlock Text="!"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Prompt Node (prompt icon with name) -->
        <Grid x:Name="PromptNode" Visibility="Collapsed">
            <Border x:Name="PromptBorder"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    BorderBrush="#A371F7"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="8,6">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Prompt SVG -->
                    <Path x:Name="PromptPath"
                          Data="M47,4.5H5c-1.7,0-3,1.3-3,3v30.6c0,1.7,1.3,3,3,3h14.5l3.6,5.2c1,1.4,2.8,1.7,4.2,0.7c0.2-0.2,0.4-0.4,0.6-0.6l4.2-5.3H47c1.7,0,3-1.3,3-3V7.5C50,5.8,48.7,4.5,47,4.5z M21.3,32L21.3,32c-0.2,0.2-0.3,0.3-0.5,0.3l-5,1.2c-0.5,0.1-0.9-0.3-0.8-0.8l1.2-5c0-0.1,0.1-0.3,0.2-0.4l0.1-0.1c0.1-0.1,0.4-0.1,0.6,0l4.2,4.2C21.4,31.6,21.4,31.9,21.3,32z M33.4,19.7L23.1,30c-0.2,0.2-0.5,0.2-0.6,0l-4.1-4.1c-0.2-0.1-0.2-0.4,0-0.6L28.6,15c0.2-0.2,0.5-0.2,0.6,0l4.1,4.1C33.5,19.3,33.5,19.5,33.4,19.7z M36.5,16.7l-1.2,1.2c-0.2,0.2-0.5,0.2-0.6,0l-4.1-4.1c-0.2-0.2-0.2-0.5,0-0.6l1.1-1.2c0.7-0.7,1.9-0.7,2.6,0l2.2,2.2C37.2,14.9,37.2,16,36.5,16.7z"
                          Fill="#A371F7"
                          Width="48" Height="48"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"/>
                    <!-- Prompt name -->
                    <TextBlock x:Name="PromptNameText"
                               Text="Prompt"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="#A371F7"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
            <!-- Error Indicator -->
            <Border x:Name="PromptErrorIndicator"
                    Background="#F85149"
                    CornerRadius="10"
                    Width="20" Height="20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-8,-8,0"
                    Visibility="Collapsed">
                <TextBlock Text="!"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Icon Node (generic icon-based node) -->
        <Grid x:Name="IconNode" Visibility="Collapsed">
            <Border x:Name="IconBorder"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    BorderBrush="#58A6FF"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="8,6">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Path x:Name="IconPath"
                          Fill="#58A6FF"
                          Width="48" Height="48"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"/>
                    <TextBlock x:Name="IconNameText"
                               Text="Node"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="#58A6FF"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
            <!-- Error Indicator -->
            <Border x:Name="IconErrorIndicator"
                    Background="#F85149"
                    CornerRadius="10"
                    Width="20" Height="20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-8,-8,0"
                    Visibility="Collapsed">
                <TextBlock Text="!"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Condition Node (diamond shape) -->
        <Grid x:Name="ConditionNode" Visibility="Collapsed">
            <Path Data="M50,0 L100,50 L50,100 L0,50 Z"
                  Fill="{DynamicResource ControlBackgroundBrush}"
                  Stroke="#79C0FF"
                  StrokeThickness="2"
                  Width="80" Height="80"
                  Stretch="Uniform"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="?"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#79C0FF"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="ConditionNameText"
                           Text="Condition"
                           FontSize="9"
                           FontWeight="SemiBold"
                           Foreground="#79C0FF"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Router Node (vertical rectangle with multiple outputs) -->
        <Grid x:Name="RouterNode" Visibility="Collapsed">
            <Border Background="{DynamicResource ControlBackgroundBrush}"
                    BorderBrush="#79C0FF"
                    BorderThickness="2"
                    CornerRadius="8">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="&#x2442;"
                               FontSize="20"
                               Foreground="#79C0FF"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="RouterNameText"
                               Text="Router"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="#79C0FF"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Right output connectors (5) -->
            <Grid HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="0,10,-6,10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Ellipse x:Name="RouterOut1" Grid.Row="0" Width="12" Height="12"
                         Fill="{DynamicResource BorderBrush}" Stroke="#79C0FF" StrokeThickness="2"
                         VerticalAlignment="Center" Cursor="Cross" Opacity="0.6"
                         MouseEnter="Connector_MouseEnter" MouseLeave="Connector_MouseLeave"
                         MouseLeftButtonDown="Connector_MouseLeftButtonDown" MouseLeftButtonUp="Connector_MouseLeftButtonUp"
                         Tag="right1"/>
                <Ellipse x:Name="RouterOut2" Grid.Row="1" Width="12" Height="12"
                         Fill="{DynamicResource BorderBrush}" Stroke="#79C0FF" StrokeThickness="2"
                         VerticalAlignment="Center" Cursor="Cross" Opacity="0.6"
                         MouseEnter="Connector_MouseEnter" MouseLeave="Connector_MouseLeave"
                         MouseLeftButtonDown="Connector_MouseLeftButtonDown" MouseLeftButtonUp="Connector_MouseLeftButtonUp"
                         Tag="right2"/>
                <Ellipse x:Name="RouterOut3" Grid.Row="2" Width="12" Height="12"
                         Fill="{DynamicResource BorderBrush}" Stroke="#79C0FF" StrokeThickness="2"
                         VerticalAlignment="Center" Cursor="Cross" Opacity="0.6"
                         MouseEnter="Connector_MouseEnter" MouseLeave="Connector_MouseLeave"
                         MouseLeftButtonDown="Connector_MouseLeftButtonDown" MouseLeftButtonUp="Connector_MouseLeftButtonUp"
                         Tag="right3"/>
                <Ellipse x:Name="RouterOut4" Grid.Row="3" Width="12" Height="12"
                         Fill="{DynamicResource BorderBrush}" Stroke="#79C0FF" StrokeThickness="2"
                         VerticalAlignment="Center" Cursor="Cross" Opacity="0.6"
                         MouseEnter="Connector_MouseEnter" MouseLeave="Connector_MouseLeave"
                         MouseLeftButtonDown="Connector_MouseLeftButtonDown" MouseLeftButtonUp="Connector_MouseLeftButtonUp"
                         Tag="right4"/>
                <Ellipse x:Name="RouterOut5" Grid.Row="4" Width="12" Height="12"
                         Fill="{DynamicResource BorderBrush}" Stroke="#79C0FF" StrokeThickness="2"
                         VerticalAlignment="Center" Cursor="Cross" Opacity="0.6"
                         MouseEnter="Connector_MouseEnter" MouseLeave="Connector_MouseLeave"
                         MouseLeftButtonDown="Connector_MouseLeftButtonDown" MouseLeftButtonUp="Connector_MouseLeftButtonUp"
                         Tag="right5"/>
            </Grid>
        </Grid>

        <!-- Selection Border -->
        <Border x:Name="SelectionBorder"
                BorderBrush="#58A6FF"
                BorderThickness="2"
                CornerRadius="10"
                Visibility="Collapsed"/>

        <!-- Connectors -->
        <Ellipse x:Name="LeftConnector"
                 Width="12" Height="12"
                 Fill="{DynamicResource BorderBrush}"
                 Stroke="#58A6FF"
                 StrokeThickness="2"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="-6,0,0,0"
                 Cursor="Cross"
                 Opacity="0"
                 MouseEnter="Connector_MouseEnter"
                 MouseLeave="Connector_MouseLeave"
                 MouseLeftButtonDown="Connector_MouseLeftButtonDown"
                 MouseLeftButtonUp="Connector_MouseLeftButtonUp"
                 Tag="left"/>

        <Ellipse x:Name="RightConnector"
                 Width="12" Height="12"
                 Fill="{DynamicResource BorderBrush}"
                 Stroke="#58A6FF"
                 StrokeThickness="2"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"
                 Margin="0,0,-6,0"
                 Cursor="Cross"
                 Opacity="0"
                 MouseEnter="Connector_MouseEnter"
                 MouseLeave="Connector_MouseLeave"
                 MouseLeftButtonDown="Connector_MouseLeftButtonDown"
                 MouseLeftButtonUp="Connector_MouseLeftButtonUp"
                 Tag="right"/>

        <Ellipse x:Name="TopConnector"
                 Width="12" Height="12"
                 Fill="{DynamicResource BorderBrush}"
                 Stroke="#58A6FF"
                 StrokeThickness="2"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Margin="0,-6,0,0"
                 Cursor="Cross"
                 Opacity="0"
                 MouseEnter="Connector_MouseEnter"
                 MouseLeave="Connector_MouseLeave"
                 MouseLeftButtonDown="Connector_MouseLeftButtonDown"
                 MouseLeftButtonUp="Connector_MouseLeftButtonUp"
                 Tag="top"/>

        <Ellipse x:Name="BottomConnector"
                 Width="12" Height="12"
                 Fill="{DynamicResource BorderBrush}"
                 Stroke="#58A6FF"
                 StrokeThickness="2"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Bottom"
                 Margin="0,0,0,-6"
                 Cursor="Cross"
                 Opacity="0"
                 MouseEnter="Connector_MouseEnter"
                 MouseLeave="Connector_MouseLeave"
                 MouseLeftButtonDown="Connector_MouseLeftButtonDown"
                 MouseLeftButtonUp="Connector_MouseLeftButtonUp"
                 Tag="bottom"/>
    </Grid>
</UserControl>
